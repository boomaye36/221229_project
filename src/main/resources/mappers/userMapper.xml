<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.user.dao.UserDAO">

	<select id="existingLoginId" parameterType="string"
		resultType="int">
		SELECT
		COUNT(1)
		FROM
		`user`
		WHERE
		`loginid`=#{user_loginid}
	</select>

	<insert id="insertUser" parameterType="map">
		Insert Into `user`
		(
		`loginid`
		,`password`
		,`phonenumber`
		,`nickname`
		,`email`
		,`path`
		,`gender`
		,`createdat`
		,`updatedat`
		)
		VALUES
		(
		#{user_loginid},
		#{user_password},
		#{user_phonenumber},
		#{user_nickname},
		#{user_email},
		#{path},
		#{user_gender},
		NOW(),
		NOW()
		)
	</insert>
	<select id="selectUserByLoginIdAndPassword" parameterType="map" resultType="com.project.user.model.User">
		SELECT
			*
		FROM
			`user`
		WHERE
			`loginid` = #{user_loginid}
		AND
			`password` = #{user_password}
	</select>
	<update id="UpdateUser" parameterType="map">
	UPDATE
		`user`
	SET
		`birth` = #{user_birth}
	,
		`area` = #{user_area}
	,	
		`intro` = #{user_intro}
	,
		`profilephoto` = #{imagePath}
	,	
		`updatedat` = NOW()
	WHERE `id` = #{user_id}
	</update>
</mapper>